<!-- ============= Introduction ============================== -->

  <sect1 id="clock-introduction"> 
	 <title>Introduzione</title> 
	 
<!-- ==== Figure ============================================= -->
	 <figure id="clock-fig"> 
		<title>Applet Orologio</title> 
		<screenshot> 
		  <mediaobject lang="en"> 
			 <imageobject><imagedata fileref="figures/clock_applet.png" format="PNG"/> 
